<div class="container" style="width: 600px;">
	<h1>Register for the Summer Course</h1>

	<div class="section">
		<%= link_to "&larr; Go back to make changes", {:action => 'edit', :id => @booking} %>
	</div>

	<div class="section">
		<h3 style="font-size: 18px; margin: 0;">Your itinerary</h3>
		<div style="border: 1px solid #ccc; padding: 5px; margin-bottom: 20px;">
			<%= render :partial => 'itinerary' %>
		</div>
		<h3 style="font-size: 18px; margin: 0;">Price preview</h3>
		<p><strong>Show prices for</strong> <input type="radio" /> pre-pay before July 15 <input type="radio" /> normal pay after July 15</p>
		<div style="border: 1px solid #ccc; padding: 5px;">
			<%= render :partial => 'price' %>
		</div>
	</div>

	<div class="section">
	</div>

	<div class="section">
		<h2>Choose a payment option</h2>
		<div class="inner">
			<p>
				<input type="radio" /> Make a bank transfer<br />
				<input type="radio" /> Pay cash at the course<br />
				<input type="radio" checked="checked" /> <strong>Pay now with credit card</strong>
			</p>
			<table class="form" style="margin-left: 25px;">
				<tr>
					<th>Name on card</th>
					<td><input type="text" /></td>
				</tr>
				<tr>
					<th>Card Number</th>
					<td><input type="text" /></td>
				</tr>
				<tr>
					<th>Security code</th>
					<td><input type="text" size="3" /></td>
				</tr>
				<tr>
					<th>Expiration</th>
					<td><select><option>Jan</option></select><select><option>2009</option></select></td>
				</tr>
			</table>
		</div>
	</div>
	<div class="section" style="border-top: 1px solid red;">
		<div class="inner">
			<p><%= button_to "Submit my registration", :action => 'submit', :id => @booking %></p>
		</div>
	</div>

</div>
